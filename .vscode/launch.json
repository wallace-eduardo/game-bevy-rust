{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/game.exe",
            "cwd": "${workspaceFolder}",
            "env": {
                "CARGO_MANIFEST_DIR": "${workspaceFolder}",
                "RUST_BACKTRACE": "1",
                "BEVY_ASSET_ROOT": "${workspaceFolder}/assets"
            },
            "sourceLanguages": ["rust"],
            "preLaunchTask": "rust: cargo build",
            "sourceMap": {
                "/rustc/*": "${env:USERPROFILE}/.rustup/toolchains/stable-x86_64-pc-windows-msvc/lib/rustlib/src/rust"
            }
        }
    ]
}